largura = float(input('Informe a largura da parede em metros: '))
altura = float(input('Informe a altura da parede em metros: '))
area = largura * altura
tinta = area / 2
print('Para pintar {:.2f}m²'.format(area), end=' ')
print('será necessário \033[1;31m{:.2f}\033[m litros de tinta.'.format(tinta))
