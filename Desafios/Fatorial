num = int(input('Digite um número para calcular seu fatorial: '))
contador = num
fatorial = 1 # fatorial recebe 1 pq será até onde o número informado será multiplicado
print('Calculando {}! = '.format(num), end=' ')
while contador > 0: # o contador não pode ser igual a zero pq zeraria a multiplicação
    print('{}'.format(contador), end=' ')
    print('x' if contador > 1 else '=', end=' ') # enquanto o contador for maior do que 1,
# será adicionado o 'x', quando ele for menor do que 1, será apresentado o '='.
    fatorial *= contador # fórmula para fazer a multiplicação dos numeros
    contador -= 1 # fórmula para ir diminuindo 1 número do número informado.
print('{}.'.format(fatorial))

num = int(input('Digite um número: '))
contador = num
fatorial = 1
print('Calculando {}! ='.format(num), end=' ')
while contador > 0:
    print(contador, end=' ')
    print('x' if contador > 1 else '=', end=' ')
    fatorial *= contador
    contador -= 1
print(fatorial)
