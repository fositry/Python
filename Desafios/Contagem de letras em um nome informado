n = str(input('Informe nome completo: ')).strip()
print(n.upper())
print(n.lower())
print(len(n) - n.count(' '))
dividido = n.split()
print(len(dividido[0]))


n = str(input('Digite seu nome completo: ')).strip()
print(n.upper())
print(n.lower())
print(len(n) - n.count(' '))
print(n.find(' ')) # retorna o valor de onde inicia o primeiro espaço
# que é após o primeiro nome, já que foi usado .strip na variável.
