n1 = float(input('Digite a primeira nota do aluno: '))
n2 = float(input('Digite a segunda nota do aluno: '))
m = (n1 + n2) / 2
if m < 5:
    print('Sua média é de {}. Média abaixo de 5.0, você foi \033[1;31mREPROVADO\033[m.'.format(m))
elif m > 7:
    print('Sua média é de {}. Média acima de 7.0, você foi \033[1;32mAPROVADO\033[m!'.format(m))
else:
    print('Sua média é de {}. Média entre 5.0 e 6.9, você está de \033[1;31mRECUPERAÇÃO\033[m.'.format(m))
