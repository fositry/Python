from datetime import date
ano = int(input('Informe o ano de nascimento: '))
idade = date.today().year - ano
print('O atleta tem {} anos.'.format(idade))
if idade <= 9:
   print('Classificação: \033[1;36mMIRIM\033[m.')
elif idade <= 14:
   print('Classificação: \033[1;34mINFANTIL\033[m.')
elif idade <= 19:
    print('Classificação: \033[1;33mJÚNIOR\033[m.')
elif idade <= 25:
    print('Classificação: \033[1;35mSÊNIOR\033[m.')
else:
    print('Classificação: \033[1;31mMASTER\033[m.')
