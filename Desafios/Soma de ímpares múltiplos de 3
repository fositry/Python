s = 0
for n in range(0, 500):
    if n % 2 != 0 and n % 3 == 0:
        s = s + n
print('A somatória dos números solicitados é {}.'.format(s))

s = 0
cont = 0
for n in range(1, 501, 2):
    if n % 3 == 0:
        cont = cont + 1 # ou cont += 1
        s = s + n # ou s += 1
print('A soma dos {} valores solicitados é {}.'. format(cont, s))
