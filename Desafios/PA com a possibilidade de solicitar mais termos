print('=' * 30)
print('PROGRESSÃO ARITMÉTICA')
print('=' * 30)
primeiro = int(input('Primeiro Termo: '))
razao = int(input('Razão da PA: '))
calculo = primeiro
cont = 1
mais = 10
sequencia = 0
while mais != 0:
    sequencia += mais
    while cont <= sequencia:
        print('{} -> '.format(calculo), end='')
        calculo += razao
        cont += 1
    print('Pausa')
    mais = int(input('Quantos termos mais vc quer que mostre? '))
print('Fim da progressão. Foram apresentados {} termos.'.format(sequencia))
